<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 알림 On/Off 토글 스위치 -->
        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 설정" />
        <LinearLayout
            android:id="@+id/notificationSettingsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치 설정" />

            <!-- 위치 설정을 위한 EditText -->
            <EditText
                android:id="@+id/locationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="위치를 입력하세요" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간 설정" />

            <!-- 시간 설정을 위한 EditText -->
            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림 받을 상태 선택" />

            <!-- 수치 설정을 위한 RadioGroup -->
            <RadioGroup
                android:id="@+id/notificationStatusRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioGroup
                    android:id="@+id/notificationBadStatusRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonBad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나쁨" />
                    <RadioButton
                        android:id="@+id/radioButtonVeryBad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 나쁨" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이거나 더 나쁠 때" />
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/notificationGoodStatusRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radioButtonNomal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통" />
                    <RadioButton
                        android:id="@+id/radioButtonGood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="좋음" />
                    <RadioButton
                        android:id="@+id/radioButtonVeryGood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 좋음" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이거나 더 좋을 때" />
                </RadioGroup>
            </RadioGroup>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="저장"
                android:onClick="saveNotificationSettings" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>